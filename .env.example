# ===========================================
# VENERA-DENT BOOKING SYSTEM - ENVIRONMENT
# ===========================================
# Энэ файлыг .env гэж хуулж тохируулна уу
# cp .env.example .env

# -----------------------
# Database Configuration
# -----------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_db
DB_USER=postgres
DB_PASS=CHANGE_THIS_STRONG_PASSWORD

# -----------------------
# Application Settings
# -----------------------
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# -----------------------
# Session Security
# -----------------------
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true

# -----------------------
# SMS Configuration (Skytel)
# -----------------------
SMS_ENABLED=true
SMS_TOKEN=your_skytel_token_here

# -----------------------
# Clinic Identifier
# -----------------------
# Эмнэлэг бүрт өөр өөр байна:
# venera, luxor, golden, khatan
CLINIC_CODE=venera
CLINIC_NAME=Venera Dent
